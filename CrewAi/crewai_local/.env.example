# ============================================================================
# CrewAI Local - Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env file to version control!
# ============================================================================

# ----------------------------------------------------------------------------
# Ollama Configuration
# ----------------------------------------------------------------------------
# Base URL for Ollama API
# Default: http://localhost:11434
OLLAMA_BASE_URL=http://localhost:11434

# Default model to use (optional - will prompt if not set)
# If set, this model will be used automatically without interactive selection
# Recommended for automation, tests, and API usage
# Examples: qwen2.5:14b, qwen3:8b, qwen3:14b, mistral:7b-instruct, codellama:13b-instruct
DEFAULT_MODEL=qwen3:14b

# ----------------------------------------------------------------------------
# Google Maps API Configuration
# ----------------------------------------------------------------------------
# Required for location-based tools:
# - maps_geocode: Convert address to coordinates
# - maps_search_places: Search for places
# - maps_directions: Get directions
# - maps_reverse_geocode: Convert coordinates to address
#
# Get your API key at: https://console.cloud.google.com/apis/credentials
# Enable these APIs:
# - Maps JavaScript API
# - Places API
# - Geocoding API
# - Directions API
#
GOOGLE_MAPS_API_KEY=your_google_maps_api_key_here

# ----------------------------------------------------------------------------
# Logging Configuration
# ----------------------------------------------------------------------------
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
# Default: INFO
LOG_LEVEL=INFO

# Maximum log file size in MB (default: 10)
LOG_MAX_SIZE_MB=10

# Number of log file backups to keep (default: 5)
LOG_BACKUP_COUNT=5

# ----------------------------------------------------------------------------
# API Configuration (for FastAPI integration)
# ----------------------------------------------------------------------------
# Server host (default: 0.0.0.0 - listens on all interfaces)
API_HOST=0.0.0.0

# Server port (default: 8000)
API_PORT=8000

# Enable auto-reload for development (default: true)
API_RELOAD=true

# CORS origins - comma-separated list of allowed origins
# Default includes n8n and common development ports
CORS_ORIGINS=http://localhost:5678,http://localhost:3000,http://localhost:8080

# Webhook timeout in seconds (default: 30)
WEBHOOK_TIMEOUT=30

# Number of webhook retry attempts (default: 3)
WEBHOOK_RETRY_COUNT=3

# Maximum concurrent jobs (default: 3)
# Prevents server overload by limiting parallel workflow executions
MAX_CONCURRENT_JOBS=3

# Job timeout in seconds (default: 10800 = 3 hours)
# Maximum time a workflow can run before being terminated
JOB_TIMEOUT=10800

# API authentication key (optional - for production use)
# If set, clients must include "Authorization: Bearer <key>" header
# API_KEY=your_secure_api_key_here

# ----------------------------------------------------------------------------
# Docker Configuration
# ----------------------------------------------------------------------------
# Skip Docker availability check on startup (for testing only)
# Default: false
# SKIP_DOCKER_CHECK=false

# ----------------------------------------------------------------------------
# Obsidian Integration (Optional)
# ----------------------------------------------------------------------------
# Path to your Obsidian vault for automatic output export
# Example: C:\Users\YourName\Documents\ObsidianVault
# OBSIDIAN_VAULT_PATH=

# Default folder within vault for CrewAI outputs
# Default: CrewAI/Outputs
# OBSIDIAN_OUTPUT_FOLDER=CrewAI/Outputs

# ----------------------------------------------------------------------------
# n8n Integration (Optional)
# ----------------------------------------------------------------------------
# n8n webhook URL for triggering workflows
# Example: http://localhost:5678/webhook/crewai
# N8N_WEBHOOK_URL=

# n8n API key for authentication (if required)
# N8N_API_KEY=

# ----------------------------------------------------------------------------
# Additional API Keys (Optional)
# ----------------------------------------------------------------------------
# Add any additional API keys your agents might need

# SERPER_API_KEY=  # For Serper web search
# OPENAI_API_KEY=  # If you want to use OpenAI models
# ANTHROPIC_API_KEY=  # If you want to use Claude models
